<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/beme"
            android:layout_marginLeft="115dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:background="#FFFFFF"
            android:text="수강"
            android:textColor="#FD8E00"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1MILLIONDANCESTUDIO"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/inpicture2"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="7dp"
                android:text="위치"
                android:textColor="#0053DD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/box"
                android:padding="5dp"
                app:srcCompat="@drawable/navermap"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="  - 지역 : 서울-마포구\n  - 수강료 : 20,000 ~ 40,000 만원 \n  - 장르 : (무관)"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:text="스케줄"
                android:textColor="#0053DD"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/box"
                android:padding="5dp"
                app:srcCompat="@drawable/sk"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="7dp"
                android:text="공지사항"
                android:textColor="#0053DD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20sp"
                android:background="@drawable/box"
                android:text=" * 연중무휴 \n * 반드시 사전예약후 방문"
                android:textColor="#090909"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="정규라인업"
                android:textColor="#0053DD"
                android:textSize="20sp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/box"
                android:padding="5dp"
                android:layout_height="150dp">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:srcCompat="@drawable/lia_kim" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingLeft="5dp"
                    app:srcCompat="@drawable/naria" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:srcCompat="@drawable/spella" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="LIA_KIM \n 5:00 ~  7:00"
                    android:textColor="#090909"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="NARIA \n 7:00 ~  9:00"
                    android:textColor="#090909"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="SPELLA \n 9:00 ~  11:00"
                    android:textColor="#090909"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>